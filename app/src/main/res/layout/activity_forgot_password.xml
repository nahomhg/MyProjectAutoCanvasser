<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_lock_outline_black_24dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Trouble with logging in?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:text="Enter your email and if it exists, we'll send you an email to get you back on to your account."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
        android:id="@+id/passwordResetEmail"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/sfpro"
        android:textColor="#000000"
        android:textSize="14sp" />

        <ImageView
            android:id="@+id/emailSentIcon"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-250dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_sent_email_24" />

    </LinearLayout>

    <Button
        android:id="@+id/submit_area"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/submit_reset_password"
        android:fontFamily="@font/sfpro"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textIsSelectable="false" />


</LinearLayout>
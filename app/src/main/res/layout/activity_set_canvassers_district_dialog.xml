<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".canvassers.canvasserDistrict.SetCanvassersDistrictDialog">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FF0099CC"
        android:scaleType="center"
        android:src="@drawable/ic_map_white_38dp" />

    <TextView
        android:id="@+id/canvasserFullNameLabelDistrict"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:text="Full Name:" />

    <TextView
        android:id="@+id/canvasserFullNameDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emailAddressLabelDistrict"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:text="Email Address:" />

    <TextView
        android:id="@+id/emailAddressApprovalDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/spinnerDistrictHolder"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:text="Select District from the following list:" />

    <Spinner
        android:id="@+id/districtSelectorSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="6dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/spinnerAreaHolder"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:text="Select Area from the following list:" />

    <Spinner
        android:id="@+id/areaSelectorSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="6dp"
        android:layout_gravity="left"/>

</LinearLayout>